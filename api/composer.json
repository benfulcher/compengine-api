            "url":  "https://github.com/tinymammothdesign/mcl-semantic-logger.git"
        }
    ],

    "require": {
        "webit/downsampling": "~1.0",
        "tinymammothdesign/mcl-yam": "@dev",
        "tinymammothdesign/mcl-semantic-logger": "@dev",
        "doctrine/orm": "~2.5",
        "symfony/yaml": "2.*",
        "searbe/brite-config": "dev-master",
        "mnapoli/php-di": "~4.0",
        "hasbridge/json-schema-validator": "0.2.0",
        "goaop/framework": "1.0.0-alpha.1",
        "sendgrid/sendgrid": "~4.0",
        "jasny/audio": "^0.1.1",
        "sabre/event": "^3.0",
        "ircmaxell/random-lib": "^1.1",
        "predis/predis": "^1.1",
        "elasticsearch/elasticsearch": "5.3.2",
        "aaronsaray/slimphp-compression-middleware": "dev-master",
        "phpoffice/phpexcel": "^1.8",
        "twig/twig": "^1.32",
        "google/recaptcha": "^1.1",
        "nesbot/carbon": "^1.22",
        "beberlei/DoctrineExtensions": "^1.0",
        "evert/sitemap-php": "^1.2",
        "palepurple/rate-limit": "^2.0"
    },

    "require-dev": {
        "phpunit/phpunit": "4.4.*",
        "mockery/mockery": "dev-master",
        "guzzle/guzzle": "~3.9"
    },

    "autoload": {
        "psr-4": {
            "ConfigurationLayer\\": "source/ConfigurationLayer/",
            "DomainLayer\\": "source/DomainLayer/",
            "Install\\": "source/Install/",
            "InfrastructureLayer\\": "source/InfrastructureLayer/",
            "PresentationLayer\\": "source/PresentationLayer/",
